<Fenomenos_Paranormais>:
    canvas.before:
        Rectangle:
            source: "data/sky.png"
            size: self.size
            pos: self.pos

    # Layout principal que inclui a área rolável
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            CustonBox:                
                Image:
                    source: "data/paranormal.png"
                    size_hint_y: None
                    height: dp(200)
                    fit_mode: "contain"
                CustomLabel:
                    text: f"Fenômenos paranormais\nRole para baixo para ver mais"
                    
                BotoesMenu:
                    text: "Irmãs Fox (1848)"
                    on_release: app.root.current = "content_screen_fenomenos_paranormais"; app.root.get_screen('content_screen_fenomenos_paranormais').load_content('https://icebergdemisterios.wordpress.com/irmas-fox-1848/')             
                    
                BotoesMenu:
                    text: "Poltergeist de Enfield (1977 até 1979)"
                    on_release: app.root.current = "content_screen_fenomenos_paranormais"; app.root.get_screen('content_screen_fenomenos_paranormais').load_content('https://icebergdemisterios.wordpress.com/poltergeist-de-enfield-1977-ate-1979/')             

                CustonBox:
                    BotoesVoltar:
                        
                        on_release: app.root.current = "principal"
