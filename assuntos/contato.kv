<Contato>:
    canvas.before:
        Rectangle:
            source: "data/sky.png"
            size: self.size
            pos: self.pos

    # Layout principal que inclui a área rolável
    BoxLayout:
        orientation: 'vertical'
        padding: 5
        spacing: 5
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            CustonBox:                                
                CustomLabel:
                    text: f"Quer fazer um orçamento, proposta ou parceria?\nEnvie me um email\n(Email selecionável)"
                    font_size: 60
                    
                TextInput:
                    text: "leonardo132@gmail.com"
                    font_size: 40
                    readonly: True  # Torna o TextInput somente leitura
                    background_color: (1, 1, 1, 0)
                    foreground_color: (0, 0, 1, 1)
                    size_hint_y: None
                    halign: 'center'
                    valign: 'middle'
                    height: dp(50)
                    padding: [10, 5]
                

                CustomLabel:
                    text: "Deseja aquecer o coração ao ajudar uma pessoa\nesforçada se tornar um ex-morador de rua?\nQualquer quantia ajuda:\n\n(O email acima é o do PayPal e PIX também)"
                    font_size: 60

                Image:
                    source: "data/pix.jpg"
                    size_hint_y: None
                    height: dp(600)
                    fit_mode: "contain"

                CustomLabel:
                    text: "Muito obrigado"
                    font_size: 60

                CustonBox:   
                    BotoesVoltar2:                       
                        on_release: app.root.current = "principal"
