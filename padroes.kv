<BotoesMenu@ButtonBehavior+Label>:
    canvas.before:
        Color:
            rgba: (0.2, 0.2, 0.2, 1) if not self.state == 'down' else (0.5, 0.5, 0.5, 1)
        RoundedRectangle:
            pos: self.pos   
            size: self.size
            radius: [200]
            source: "data/maos.png"
    bold: True
    opacity: 1
    font_name: "fonts/almendra-regular.otf"
    font_size: 35
    height: 60
    size_hint_y: None
    on_release: app.root.transition.direction = "left"
    padding: 20, 100

