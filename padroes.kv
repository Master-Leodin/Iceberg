<CustomLabel@Label>:
    padding: 20, 5
    color: "red"
    font_name: "fonts/almendra-regular.otf"
    font_size: 38
    bold: True
    halign: 'center'
    valign: 'middle'
    text_size: self.width, None
    size_hint_y: None
    height: self.texture_size[1]

<CustonBox@BoxLayout>:
    padding: 50, 50
    spacing: 20  
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height

<CustonBox2@BoxLayout>:
