<BotoesVoltar@ButtonBehavior+BoxLayout>:
    orientation: 'horizontal'
    size_hint: None, None
    height: 80
    width: self.minimum_width
    on_release: app.root.transition.direction = "right"
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1) if not self.state == 'down' else (0.5, 0.5, 0.5, 1)
        RoundedRectangle:
            pos: self.pos   
            size: self.size
            radius: [200]
            source: "data/eye.png"  # Coloca a imagem como fundo
        
    Label:
        text: "Voltar"
        bold: True
        spacing: 5
        opacity: 1
        color: (1, 1, 1, 1)  # Cor branca para o texto
        font_name: "fonts/gothic_ultra_ot.otf"
        font_size: 40
        size_hint_x: None
        width: self.texture_size[0]
        height: self.parent.height
        pos_hint: {'center_y': 0.5}

