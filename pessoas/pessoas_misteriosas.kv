<Pessoas_Misteriosas>:
    canvas.before:
        Rectangle:
            source: "data/sky.png"
            size: self.size
            pos: self.pos

    # Layout principal que inclui a área rolável
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            CustonBox:                
                Image:
                    source: "data/mysterious_people_2.jpg"
                    size_hint_y: None
                    height: dp(200)
                    fit_mode: "contain"
                CustomLabel:
                    text: f"Selecione a pessoa misteriosa"
                    
                BotoesMenu:
                    text: "Benjaman Kyle"
                    on_release: app.root.current = "content_screen_pessoas_misteriosas"; app.root.get_screen('content_screen_pessoas_misteriosas').load_content('https://icebergdemisterios.wordpress.com/benjaman-kyle/')
                                       
                BotoesMenu:
                    text: "Charles Jamison"
                    on_release: app.root.current = "content_screen_pessoas_misteriosas"; app.root.get_screen('content_screen_pessoas_misteriosas').load_content('https://icebergdemisterios.wordpress.com/charles-jamison/')
                    
                BotoesMenu:
                    text: "Homem de Somerton (Caso Tamam Shud)"
