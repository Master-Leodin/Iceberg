<Mitologia>:
    canvas.before:
        Rectangle:
            source: "data/sky.png"
            size: self.size
            pos: self.pos

    # Layout principal que inclui a área rolável
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            CustonBox:                
                Image:
                    source: "data/mythology.jpg"
                    size_hint_y: None
                    height: dp(200)
                    fit_mode: "contain"
                CustomLabel:
                    text: f"Selecione o animal mitológico"
                    
                BotoesMenu:
                    text: "Boitatá"
                    on_release: app.root.current = "content_screen_mitologia"; app.root.get_screen('content_screen_mitologia').load_content('https://icebergdemisterios.wordpress.com/boitata/'); app.root.get_screen('content_screen_mitologia').set_podcast_url('https://www.fountain.fm/episode/ZWWWuS19roB0ILvvZipt')                   
                                                   
