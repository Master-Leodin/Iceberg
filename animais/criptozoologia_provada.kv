<Criptozoologia_Provada>:
    canvas.before:
        Rectangle:
            source: "data/sky.png"
            size: self.size
            pos: self.pos

    # Layout principal que inclui a área rolável
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            CustonBox:                
                Image:
                    source: "data/cryptozoology_proved.png"
                    size_hint_y: None
                    height: dp(200)
                    fit_mode: "contain"
                CustomLabel:
                    text: f"Selecione o ex-criptídio"

                BotoesMenu:
