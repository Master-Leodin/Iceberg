<Ufologia_1_Grau>:
    canvas.before:
        Rectangle:
            source: "data/sky.png"
            size: self.size
            pos: self.pos

    # Layout principal que inclui a área rolável
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            CustonBox:                
                Image:
                    source: "data/ce1.jpg"
                    size_hint_y: None
                    height: dp(200)
                    fit_mode: "contain"
                CustomLabel:
                    text: f"Contatos Imediatos de 1°"
                    
                BotoesMenu:
                    text: "Kenneth Arnold (1947)"
                    on_release: app.root.current = "content_screen_1_grau"; app.root.get_screen('content_screen_1_grau').load_content('https://icebergdemisterios.wordpress.com/kennetharnold/'); app.root.get_screen('content_screen_1_grau').set_podcast_url('https://www.fountain.fm/episode/ZWWWuS19roB0ILvvZipt')

                BotoesMenu:
                    text: "OVNIs de Washington (1952)"
                    on_release: app.root.current = "content_screen_1_grau"; app.root.get_screen('content_screen_1_grau').load_content('https://icebergdemisterios.wordpress.com/ovnisdewashington/'); app.root.get_screen('content_screen_1_grau').set_podcast_url('https://www.fountain.fm/episode/ZWWWuS19roB0ILvvZip')

                BotoesMenu:
                    text: "OVNI de Westall (1966)"
                    on_release: app.root.current = "content_screen_1_grau"; app.root.get_screen('content_screen_1_grau').load_content('https://icebergdemisterios.wordpress.com/ovni-de-westall-1966/'); app.root.get_screen('content_screen_1_grau').set_podcast_url('https://www.fountain.fm/episode/ZWWWuS19roB0ILvvZipt')

                BotoesMenu:
                    text: "Phoenix Lights (1997)"
                    on_release: app.root.current = "content_screen_1_grau"; app.root.get_screen('content_screen_1_grau').load_content('https://icebergdemisterios.wordpress.com/phoenix-lights-1997/'); app.root.get_screen('content_screen_1_grau').set_podcast_url('https://www.fountain.fm/episode/ZWWWuS19roB0ILvvZipt')

                BotoesMenu:
                    text: "O'Hare International Airport (2006)"
                    on_release: app.root.current = "content_screen_1_grau"; app.root.get_screen('content_screen_1_grau').load_content('https://icebergdemisterios.wordpress.com/ohare-international-airport-2006/'); app.root.get_screen('content_screen_1_grau').set_podcast_url('https://www.fountain.fm/episode/ZWWWuS19roB0ILvvZipt')

                BotoesVoltar:                    
                    on_release: app.root.current = "ufologia"
