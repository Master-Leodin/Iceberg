<Ufologia_2_Grau>:
    canvas.before:
        Rectangle:
            source: "data/sky.png"
            size: self.size
            pos: self.pos

    # Layout principal que inclui a área rolável
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 0
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            CustonBox:                
                Image:
                    source: "data/ce2.jpg"
                    size_hint_y: None
                    height: dp(200)
                    fit_mode: "contain"
                CustomLabel:
                    text: f"Contatos Imediatos de 2°"
                    
                BotoesMenu:
                    text: "Socorro (1964)"
                    on_release: app.root.current = "content_screen_2_grau"; app.root.get_screen('content_screen_2_grau').load_content('https://icebergdemisterios.wordpress.com/caso-de-socorro-1964/'); app.root.get_screen('content_screen_2_grau').set_podcast_url('https://www.fountain.fm/episode/ZWWWuS19roB0ILvvZipt')

                BotoesMenu:
                    text: "Delphos (1971)"
                    on_release: app.root.current = "content_screen_2_grau"; app.root.get_screen('content_screen_2_grau').load_content('https://icebergdemisterios.wordpress.com/caso-de-delphos-1971/'); app.root.get_screen('content_screen_2_grau').set_podcast_url('https://www.fountain.fm/episode/ZWWWuS19roB0ILvvZipt')

                BotoesMenu:
                    text: "Cash-Landrum (1980)"
                    on_release: app.root.current = "content_screen_2_grau"; app.root.get_screen('content_screen_2_grau').load_content('https://icebergdemisterios.wordpress.com/cash-landrum-1980/'); app.root.get_screen('content_screen_2_grau').set_podcast_url('https://www.fountain.fm/episode/ZWWWuS19roB0ILvvZipt')

                BotoesMenu:
                    text: "Trans-en-Provence (1981)"
                    on_release: app.root.current = "content_screen_2_grau"; app.root.get_screen('content_screen_2_grau').load_content('https://icebergdemisterios.wordpress.com/caso-de-trans-en-provence-1981/'); app.root.get_screen('content_screen_2_grau').set_podcast_url('https://www.fountain.fm/episode/ZWWWuS19roB0ILvvZipt')

                BotoesVoltar:                    
                    on_release: app.root.current = "ufologia"
